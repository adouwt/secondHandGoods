<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>水贴</title>
    <% include component/css.ejs %>
  </head>
  <body>
    <%include component/header.ejs%>
    <section class="section-wrapper">
        <%include component/left_colum.ejs%>
        <div class="right_board">
          <header>
              <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 h1">
                <h3>
                  自由贴
                </h3>
              </div>
          </header>
          <section class="exchangeList" >
            <% for(var i= 0;i<pagedata.result.length;i++) {%>
              <section class="goodsList">
                <div class="container-fluid">
                    <div class="row">
                      <div class="right_product_details col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="">
                          <ul>
                            <li>
                              <span class="right_board_categories">事件名称：</span>
                              <span class="right_board_categories_name"><%= pagedata.result[i].noteTitle%></span>
                            </li>
                            <li>
                              <span class="right_board_categories">发贴时间：</span>
                              <span class="right_board_categories_name"><%= pagedata.result[i].publicTime%></span>
                            </li>
                            <li>
                              <span class="right_board_categories">水的内容：</span> <br>
                              <span class="product_details_addText right_board_categories_name">
                                  <%= pagedata.result[i].noteContent%>
                              </span>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="left_product_img col-lg-5 col-md-5 col-sm-12 col-xs-12">
                        <% include component/common-carousel.ejs%>
                      </div>
                  </div>
                </div>
              </section>
              <hr>
              <% include component/common-model %>
            <% }%>
          </section>
          <footer class="deliver-page">
            <nav aria-label="Page navigation" class="navbar  navbar-right">
              <ul class="pagination donatePagination">

              </ul>
              </nav>
          </footer>
          
        </div>
    </section>

    <footer class="copy_right">
      <p>Copyright © 2017. Brother Team All rights reserved.</p>
    </footer>
    <% include  component/js.ejs%>
  </body>
</html>
