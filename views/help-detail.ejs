<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>help</title>
    <% include component/css.ejs %>
  </head>
  <body>
    <%include component/header.ejs%>
    <section class="section-wrapper">
        <%include component/left_colum.ejs%>
        <div class="right_board">
          <header>
              <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 h1">
                <h3>
                  I need Help 
                </h3>
              </div>
              
          </header>
          <section class="helpList" >
            <% for(var i= 0;i<pagedata.result.length;i++) {%>
              <section class="goodsList">
                <div class="container-fluid">
                    <% if(pagedata.result[i].goodsStatus == "finish") { %>
                        <div class="row disabled">
                    <% } else {%>
                    <div class="row">
                    <% } %>
                    <div class="right_product_details col-lg-6 col-md-6 col-sm-12 col-xs-12">
                      <div class="">
                        <ul>
                          <li>
                            <span class="right_board_categories">类别：</span>
                            <span class="right_board_categories_name"><%= pagedata.result[i].userGoodsSort%></span>
                          </li>
                          <li>
                            <span class="right_board_categories">名称：</span>
                            <span class="right_board_categories_name"><%= pagedata.result[i].userGoodsName%></span>
                          </li>
                          <li>
                            <span class="right_board_categories">联系人：</span>
                            <span class="right_board_categories_name"><%= pagedata.result[i].userName%></span>
                          </li>
                          <li>
                            <span class="right_board_categories">联系电话：</span>
                            <span class="right_board_categories_name"><%= pagedata.result[i].userPhone%></span>
                          </li>
                          <li>
                            <span class="right_board_categories">发布时间：</span>
                            <span class="right_board_categories_name"><%= pagedata.result[i].publicTime%></span>
                          </li>
                          <li>
                              <span class="right_board_categories">交易状态：</span>

                              <% if(pagedata.result[i].goodsStatus == "finish") { %>
                                <button class ="btn btn-danger" disabled>交易结束</button>
                              <% } else {%>
                                <button class ="btn btn-success" disabled>交易进行中</button>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#<%= pagedata.result[i]._id%>">立即联系</button>
                              <%}%>

                          </li>
                          <li>
                            <span class="right_board_categories">详细补充：</span> <br>
                            <span class="product_details_addText right_board_categories_name">
                                <%= pagedata.result[i].userGoodsaddText%>
                            </span>
                          </li>
                        </ul>
                      </div>
                    </div>
                    <div class="left_product_img col-lg-5 col-md-5 col-sm-12 col-xs-12">
                      <% include component/common-carousel.ejs%>
                    </div>
                  </div>
                </div>
                <% if(pagedata.result[i].helpStatus == "finish") { %>
                      <i class="fa fa-times"></i>
                  <% } else {%>
                    <i class="fa fa-times" style="display: none;"></i>
                  <% } %>
              </section>
              <hr>
              <% include component/common-model %>
            <% }%>
          </section>
          <footer class="deliver-page">
            <nav aria-label="Page navigation" class="navbar  navbar-right">
              <ul class="pagination donatePagination">

              </ul>
              </nav>
          </footer>
        </div>
    </section>

    <footer class="copy_right">
      <p>Copyright © 2017. Brother Team All rights reserved.</p>
    </footer>
    <% include  component/js.ejs%>
  </body>
</html>
