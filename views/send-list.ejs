<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>赠送</title>
    <% include component/css.ejs %>
  </head>
  <body>
    <%include component/header.ejs%>
    <section class="section-wrapper">
        <%include component/left_colum.ejs%>
        <div class="right_board">
          <header>
              <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 h1">
                <h3>
                  送-send
                </h3>
              </div>
          </header>
          <section class="sendList" >
              <section class="goodsList">
                <div class="container-fluid">
                    <div class="row">
                      <% for(var i= 0;i<pagedata.result.length;i++) {
                        var targetId =  pagedata.result[i]._id
                      %>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                          <div class="pc-page">
                            <a class="goods-link" href= "<%= pagedata.result[i].router%>?targetid=<%= targetId %>"  >
                              <div class="goods-list-box">
                                <p>
                                  <span class="user-goods-img" style="background-image:url(<%=  pagedata.result[i].imgBase64Arr[0]%>)"></span>
                                </p>
                                <p class="goods-base-msg">
                                  <span class="sec-one-line"><%= pagedata.result[i].userGoodsName%></span> <br>
                                  <span class="sec-one-line"><%= pagedata.result[i].userName%></span>  <br>
                                  <% if(pagedata.result[i].goodsStatus == "finish") { %>
                                    <button class ="btn btn-danger" disabled>交易结束</button>
                                  <% } else {%>
                                    <button class ="btn btn-success" disabled>交易进行中</button>
                                  <%}%>
                                </p>
                              </div>
                            </a>  
                          </div>
                          <div class="mobile-page">
                            <div>
                              <a class="goods-link" href= "<%= pagedata.result[i].router%>?targetid=<%= targetId %>"  >
                                <span class="data-index"><%= i+1%>.</span>
                                <span class="data-img sec-mr-sm" style="background-image:url(<%=  pagedata.result[i].imgBase64Arr[0]%>)"></span>
                                <span class="data-title"><%= pagedata.result[i].userGoodsName%></span>
                                <span class="sec-line">|</span>
                                <span class="data-content"><%= pagedata.result[i].userName%></span>
                              </a>
                            </div>
                          </div>
                        </div> 
                        <hr>
                      <% }%>
                    </div>
                </div>
              </section>
              
          </section>
          <footer class="deliver-page">
            <nav aria-label="Page navigation" class="navbar  navbar-right">
              <ul class="pagination sendPagination">

              </ul>
              </nav>
          </footer>
        </div>
    </section>

    <footer class="copy_right">
      <p>Copyright © 2017. Brother Team All rights reserved.</p>
    </footer>

    <% include  component/js.ejs%>
  </body>
</html>
